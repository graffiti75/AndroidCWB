<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="5dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">



        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_body">

            <ImageView
                    android:id="@+id/img_android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_donut"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/api_lvl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Api level"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    app:layout_constraintLeft_toRightOf="@id/img_android"
                    app:layout_constraintTop_toTopOf="parent" />

            <View
                    android:layout_width="100dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/dim_20dp"
                    android:background="@color/white"
                    app:layout_constraintLeft_toRightOf="@id/img_android"
                    app:layout_constraintTop_toBottomOf="@id/api_lvl"/>

            <TextView
                    android:id="@+id/number_api"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_20dp"
                    android:layout_marginTop="@dimen/dim_10dp"
                    android:fontFamily="@font/roboto_black"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    app:layout_constraintLeft_toRightOf="@id/img_android"
                    app:layout_constraintTop_toBottomOf="@id/api_lvl" />

            <TextView
                    android:id="@+id/title_android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_20dp"
                    android:layout_marginTop="@dimen/dim_10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Android"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    app:layout_constraintLeft_toRightOf="@id/img_android"
                    app:layout_constraintTop_toBottomOf="@id/number_api" />

            <View
                    android:layout_width="100dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/dim_20dp"
                    android:background="@color/white"
                    app:layout_constraintLeft_toRightOf="@id/img_android"
                    app:layout_constraintTop_toBottomOf="@id/title_android"/>


            <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_20dp"
                    android:layout_marginTop="@dimen/dim_10dp"
                    android:fontFamily="@font/roboto_black"
                    android:text="1.6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    app:layout_constraintLeft_toRightOf="@id/img_android"
                    app:layout_constraintTop_toBottomOf="@id/title_android" />

            <View
                    android:layout_width="100dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/dim_20dp"
                    android:background="@color/white"
                    app:layout_constraintLeft_toRightOf="@id/img_android"
                    app:layout_constraintTop_toBottomOf="@id/title_android"/>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_20dp"
                    android:layout_marginTop="@dimen/dim_10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Android Open\nSource Project"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    app:layout_constraintLeft_toRightOf="@id/img_android"
                    app:layout_constraintTop_toBottomOf="@id/version" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>