<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="20dp"
    app:cardMaxElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_body">

        <ImageView
            android:id="@+id/img_android"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/image_of_android_icon"
            android:src="@drawable/ic_android_standart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/api_lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/api_level"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size"
            app:layout_constraintLeft_toRightOf="@id/img_android"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginStart="@dimen/dim_20dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            app:layout_constraintLeft_toRightOf="@id/img_android"
            app:layout_constraintTop_toBottomOf="@id/api_lvl" />

        <TextView
            android:id="@+id/number_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_20dp"
            android:layout_marginTop="@dimen/dim_20dp"
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            app:layout_constraintLeft_toRightOf="@id/img_android"
            app:layout_constraintTop_toBottomOf="@id/api_lvl"
            tools:text="4" />

        <TextView
            android:id="@+id/title_android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_20dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size"
            app:layout_constraintLeft_toRightOf="@id/img_android"
            app:layout_constraintTop_toBottomOf="@id/number_api"
            tools:text="Android" />

        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginStart="@dimen/dim_20dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            app:layout_constraintLeft_toRightOf="@id/img_android"
            app:layout_constraintTop_toBottomOf="@id/title_android" />


        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_20dp"
            android:layout_marginTop="@dimen/dim_20dp"
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            app:layout_constraintLeft_toRightOf="@id/img_android"
            app:layout_constraintTop_toBottomOf="@id/title_android"
            tools:text="1.6" />

        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginStart="@dimen/dim_20dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            app:layout_constraintLeft_toRightOf="@id/img_android"
            app:layout_constraintTop_toBottomOf="@id/title_android" />


        <TextView
            android:id="@+id/sub_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_20dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            app:layout_constraintEnd_toEndOf="@dimen/dim_20dp"
            app:layout_constraintLeft_toRightOf="@id/img_android"
            app:layout_constraintTop_toBottomOf="@id/version"
            tools:text="Android Open\nSource Project" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>